<div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Empresa</th>
            <th>Email</th>
            <th>Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @fornecedors.each do |fornecedor| %>
              <td><%= fornecedor.empresa %></td>
              <td><%= fornecedor.email %></td>
              <td><%= link_to 'Detalhes', edit_fornecedor_path(fornecedor) %> | <%= link_to 'Excluir', fornecedor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-body">
        <%= will_paginate @items, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

    <div class="col-sm-12">
      <%= link_to 'Novo Fornecedor', new_fornecedor_path, :class => "btn btn-success btn-lg active" %>
    </div>