<%= form_for @transportadora, :html => { :class => "form-horizontal transportadora" } do |f| %>
    <% if @transportadora.errors.any? %>
    <div id="error_explanation">
    Há erros no formulário, por favor verifique.
    </div>
    <% end %>

<div class="panel panel-default">
  <div class="panel-body">

   
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Nome</label>
          <%= f.text_field :nome, :class => "form-control", :placeholder => "Nome" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Endereço</label>
          <%= f.text_field :endereco, :class => "form-control", :placeholder => "Endereço" %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Cidade</label>
          <%= f.text_field :cidade, :class => "form-control", :placeholder => "Cidade" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Telefone</label>
          <%= f.text_field :telefone, :class => "form-control", :placeholder => "Telefone" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Email</label>
          <%= f.text_field :email, :class => "form-control", :placeholder => "Email" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Cadastrar', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
