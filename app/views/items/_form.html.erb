<%= form_for @item, :html => { :class => "form-horizontal item" } do |f| %>
    <% if @item.errors.any? %>
    <div id="error_explanation">
    Há erros no formulário, por favor verifique.
    </div>
    <% end %>

<div class="panel panel-default">
  <div class="panel-body">

   
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Categoria</label>
          <%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "Selecione uma Categoria"}, {class: "form-control"}  %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Nome do Item</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Nome do Item" %>
          <%= error_tag @item, :name %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Código</label>
          <%= f.text_field :sku, :class => "form-control", :placeholder => "Código" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Quantidade</label>
          <%= f.text_field :stock_amount, :class => "form-control", :placeholder => "Quantidade" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Preço</label>
          <%= f.text_field :price, :class => "form-control", :placeholder => "Preço" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Descrição</label>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Descrição" %>
        </div>
      </div>
      

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Preço de Custo</label>
          <%= f.text_field :cost_price, :class => "form-control", :placeholder => "Preço de Custo" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Cadastrar', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
